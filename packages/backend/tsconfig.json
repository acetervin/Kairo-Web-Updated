{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "./dist",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "resolvePackageJsonExports": true,
    "types": ["node"],
    "baseUrl": ".",
    "tsBuildInfoFile": "./.tsbuildinfo",
    "paths": {
      "@boo-back/shared": ["../shared"],
      "@boo-back/shared/*": ["../shared/*"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"],
  "references": [
    { "path": "../shared" }
  ]
}

