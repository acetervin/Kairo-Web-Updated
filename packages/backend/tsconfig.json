{
  "compilerOptions": {
    "composite": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2020",
    "outDir": "./dist",
    "noEmit": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": false,
    "allowImportingTsExtensions": false,
    "isolatedModules": false,
    "lib": ["ES2020"],
    "types": ["node"],
    "baseUrl": ".",
    "tsBuildInfoFile": "./.tsbuildinfo",
    "paths": {
      "@boo-back/shared": ["../shared"],
      "@boo-back/shared/*": ["../shared/*"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "seed-db.ts", "vite.ts", "scripts/**/*", "api/**/*"],
  "references": [
    { "path": "../shared" }
  ]
}

